.main {
  position: relative;
  padding: 20rpx;
  background: rgb(133, 211, 133);
}

.game-area {
  position: relative;
  width: 600rpx;
  height: 600rpx;
  margin: 0 auto;
}

.hole-main {
  width: 200rpx;
  height: 200rpx;
  overflow: hidden;
}

.hole {
  width: 160rpx;
  height: 65rpx;
  position: absolute;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 80%;
  background: rgb(148, 75, 33);
}

.hole-box {
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  top: var(--top);
  left: var(--left);
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.cat {
  width: 79rpx;
  height: 64rpx;
  position: absolute;
  transform: translateY(80rpx);
  transition: transform 0.4s ease-out;
}

.active-cat {
  width:79rpx;
  height: 64rpx;
  position: absolute;
  transform: translateY(-20rpx);
  transition: transform 0.4s ease-out;
}

.reset {
  margin-top: 40rpx;
}

.start{
  margin-top: 50rpx;
}