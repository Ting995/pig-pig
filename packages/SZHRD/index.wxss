.game-area {
  position: relative;
  width: 608rpx;
  height: 608rpx;
  border: 6rpx solid #cccccc;
  margin: 20rpx auto;
  box-sizing: border-box;
}

.game-block {
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  line-height: 200rpx;
  text-align: center;
  font-size: 60rpx;
  color: #cccccc;
  border: 2rpx solid #cccccc;
  box-sizing: border-box;
  left: var(--left);
  top: var(--top);
  background: var(--bg);
  transition: transform 0.4s ease-out;
}

.btn-start {
  margin: 650rpx auto 50rpx auto;
  font-size: 28rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  background-color: #4CAF50;
  color: #fff;
}
