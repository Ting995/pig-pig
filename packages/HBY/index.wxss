.game-area {
  height: 900rpx;
  position: relative;
  overflow: hidden;
}

.red-pack {
  width: 200rpx;
  height: 90rpx;
  background: rgb(231, 85, 85);
  border-radius: 8rpx;
  position: absolute;
  top: 10rpx;
  left: var(--left);
  animation-name: drop;
  animation-duration: 3s;
  animation-fill-mode: forwards;
}

@keyframes drop {
  0% {
    top: 10rpx;
    opacity: 1;
  }

  40% {
    opacity: 1;
  }

  100% {
    top: 1000rpx;
    visibility: hidden;
    opacity: 0;
    display: none;
  }
}