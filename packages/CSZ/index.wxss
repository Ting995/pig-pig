.game-area{
  width: 700rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  margin: 20rpx auto;
}

.card-front{
  position: relative;
  width: 200rpx;
  height: 300rpx;
  border-radius:20rpx;
  background: rgb(228, 178, 178);
  margin: 10rpx;
  transition: transform 0.6s;
}

.card-back{
  position: absolute;
  top: 0;
  left: 0;
  width: 200rpx;
  height: 300rpx;
  border-radius:20rpx;
  background: rgb(228, 206, 178);
  transform: rotateY(180deg);
}


.card-rotated {
  transform: rotateY(180deg);
}

.randomCount{
  font-weight: bold;
  text-align: center;
  font-size: 40rpx;
}